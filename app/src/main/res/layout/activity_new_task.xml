<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".NewTaskAct"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#8CACFF">

        <Button
            android:id="@+id/btn_backToMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/bag_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/calendar2"/>

        <EditText
            android:id="@+id/titlereminder"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:hint="Masukan Judul Reminder"
            android:inputType="text"
            android:textColor="#6A8ADB"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#6A8ADB"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Atur Lokasi"
            android:textColor="#6A8ADB"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/location" />

            <EditText
                android:id="@+id/locationreminder"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:hint="Masukan Lokasi"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#6A8ADB"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#6A8ADB"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Atur Waktu dan Tanggal"
            android:textColor="#6A8ADB"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="341dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_calendar1"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/datereminder2"
                android:layout_width="289dp"
                android:layout_height="259dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_calendar" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_calendar"
                android:orientation="horizontal"
                android:padding="5dp">

                <EditText
                    android:id="@+id/datereminder"
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:hint="Masukan Tanggal"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#6A8ADB"
                    android:textColorHighlight="#FFFFFF"
                    android:textColorHint="#6A8ADB"
                    android:textSize="15dp" />

                <!--                <ImageView-->
                <!--                    android:layout_width="25dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    android:layout_marginLeft="5dp"-->
                <!--                    android:src="@drawable/time" />-->

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginLeft="10dp"-->
                <!--                    android:layout_marginTop="2dp"-->
                <!--                    android:text="Time"-->
                <!--                    android:textColor="#6A8ADB" />-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:paddingTop="30dp">
        <Button
            android:id="@+id/btnCancelReminder"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/bg_btncancel"
            android:layout_marginLeft="150dp"/>

        <Button
            android:id="@+id/btnSaveReminder"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Next"
            android:textColor="@color/white"
            android:background="@drawable/bg_btnsave"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
</LinearLayout>