<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgitemreminder"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titlereminder"
            android:layout_marginTop="19dp"
            android:textSize="22sp"
            android:textColor="#5579D6"
            android:text="Judul Reminder"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/locationreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Location"
            android:textColor="#696969"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/datereminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF6C89"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="Date"
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>